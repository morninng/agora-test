{
  "hosting": {
    "public": "dist/sample-app2",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/src/*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/public/**/*",
        "destination": "/index.html"
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ]
  }
}
